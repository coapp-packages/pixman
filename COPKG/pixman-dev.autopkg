@import "version.inc";
@import "compat.inc";
@import "outercurve.inc";

#define { 
    flavor: "${comp??vc10}"; 
    arch : "${plat??x86}";
}

package {
    name: "pixman-dev[${flavor}]";
    version: "${package-version}";
    arch : "${arch}";

    display-name: "Pixman-Dev";
    location: "http://coapp.org/repository/${OutputFilename}";

    feed: "http://coapp.org/repository/packages.atom.xml";
    publisher: "CoApp Project";
}

license[MIT] {
	license: @"..\COPYING";
    license-url: "http://www.opensource.org/licenses/mit-license.php";
    license-type: "MIT";
}

requires {
    package: "pixman[${flavor}]-${package-version}-${Package.Architecture}-${Package.PublicKeyToken}";
    package: "pixman-dev-common-${package-version}-any-${Package.PublicKeyToken}";
}

metadata {  
    summary: "Pixman";
    description: @"Pixman is a low-level software library for pixel manipulation.";
    author-version : "${package-version}";
    bug-tracker: "https://github.com/coapp-packages/pixman/issues";
    stability : "0";
    licenses : {
        MIT
    };
}

developer-library[pixman[${flavor}]] {
    libraries : {
        libs,
    };
}

files[libs] {
    root: @"..\COPKG\pixman\Release";

    include: {
        "pixman.lib",
    };

    trim-path: all;
};

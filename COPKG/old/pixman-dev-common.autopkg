@import "version.inc";
@import "compat.inc";
@import "outercurve.inc";

package {
    name: "pixman-dev-common";
    version: "${package-version}";
    arch : "any";

    display-name: "Pixman-Dev-Common";
    location: "http://coapp.org/repository/${OutputFilename}";

    feed: "http://coapp.org/repository/packages.atom.xml";
    publisher: "CoApp Project";
}

license[MIT] {
	license: @"..\COPYING";
    license-url: "http://www.opensource.org/licenses/mit-license.php";
    license-type: "MIT";
}

metadata {  
    summary: "Pixman";
    description: @"Pixman is a low-level software library for pixel manipulation.";
    author-version : "${package-version}";
    bug-tracker: "https://github.com/coapp-packages/pixman/issues";
    stability : "0";
    licenses : {
        MIT
    };
}

developer-library[pixman] {
    headers: { 
        headers,
		versionheader
    };
}

files[headers] {
    root: @"..\pixman";
    include: {
        "pixman.h"
    };

    trim-path:none;
}

files[versionheader] {
    root: @"pixman";
    include: {
        "pixman-version.h"
    };

    trim-path:none;
}
